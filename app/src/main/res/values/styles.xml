<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton.Base" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">24sp</item>
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalcButton.LightGray" parent="CalcButton.Base">
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="CalcButton.DarkGray" parent="CalcButton.Base">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalcButton.Orange" parent="CalcButton.Base">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>